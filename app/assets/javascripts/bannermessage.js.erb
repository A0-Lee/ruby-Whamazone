// For the shared/banner message partial view

function randomMessage() {
  // Generates a random number between 0 (inclusive) and 3 (exclusive)
  var randomIndex = Math.floor((Math.random() * 3) + 0);
  var messages = ["<%= I18n.t 'main.home.home_event1' %>", "<%= I18n.t 'main.home.home_event2' %>", "<%= I18n.t 'main.home.home_event3' %>"];

  return messages[randomIndex];
}

document.addEventListener("turbolinks:load", function() {
  $(document).ready(function() {
    $("#home_banner").replaceWith(randomMessage());
  });
});
