<h1><%=t('.contact_title')%></h1>
<p><%=t('.contact_description')%></p>
<p class="font-italic font-weight-bold"><%=t('.contact_disclaimer')%></p>

<%= form_with scope: :form, url: request_form_path, method: 'post', local: true do |form| %>
<p>
  <%= form.label :name, t(".name") %><br>
  <%= form.text_field :name, title: t(".enter_name"), size: 30, placeholder: t(".name_placeholder"), :required => true %>
</p>

<p>
  <%= form.label :email, t(".email") %><br>
  <%= form.email_field :email, title: t(".enter_email"), size: 30, placeholder: t(".email_placeholder"), :required => true %>
</p>

<p>
  <%= form.label :telephone, t(".telephone") %><br>
  <%= form.telephone_field :telephone, title: t(".enter_telephone"), placeholder: t(".telephone_placeholder"), size: 30, :required => true %>
</p>

<p>
  <%= form.label :message, t(".message") %><br>
  <%= form.text_area :message, title: t(".enter_message"), size: "50x5", placeholder: t(".message_placeholder"), :required => true %>
</p>

<p>
  <%= form.submit t(".submit") %>
</p>
<% end %>
