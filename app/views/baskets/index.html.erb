<p id="notice"><%= notice %></p>

<h1>My Basket</h1>
<hr>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Customername</th>
      <th>Address</th>
      <th>City</th>
      <th>County</th>
      <th>Postcode</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @baskets.each do |basket| %>
      <tr>
        <td><%= basket.customerName %></td>
        <td><%= basket.address %></td>
        <td><%= basket.city %></td>
        <td><%= basket.county %></td>
        <td><%= basket.postcode %></td>
        <td><%= link_to 'Show', basket %></td>
        <td><%= link_to 'Edit', edit_basket_path(basket) %></td>
        <td><%= link_to 'Destroy', basket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Basket', new_basket_path %>
