<p id="notice"><%= notice %></p>

<h1>Customer Infos</h1>
<hr>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Customername</th>
      <th>Telephone</th>
      <th>Address</th>
      <th>City</th>
      <th>County</th>
      <th>Postcode</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customer_infos.each do |customer_info| %>
      <tr>
        <td><%= customer_info.user %></td>
        <td><%= customer_info.customerName %></td>
        <td><%= customer_info.telephone %></td>
        <td><%= customer_info.address %></td>
        <td><%= customer_info.city %></td>
        <td><%= customer_info.county %></td>
        <td><%= customer_info.postcode %></td>
        <td><%= link_to 'Show', customer_info %></td>
        <td><%= link_to 'Edit', edit_customer_info_path(customer_info) %></td>
        <td><%= link_to 'Destroy', customer_info, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

